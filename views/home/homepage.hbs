<style>
    body {
        background-color: rgba(228, 228, 228, 0.664);
    }
</style>

<div class="container mt-3">
    <h2 class="text-center">Upload a Image :</h2>
    <div class="row justify-content-center">
        <div class="col-4">
            <form action="/v1/image/uploadmultiple" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-10 mt-3">
                        <input type="file" class="form-control" name="image" id="formFile">
                    </div>
                    <div class="col-2 mt-3">
                        <input type="submit" class="btn btn-warning" value="Upload Images">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br><br>

    {{!-- display images --}}
    <section class="mt-5">
        <div class="row">
            {{#each data}}
            <div class="col-3 m-3">
                <div class="card shadow" style="width: 18rem;">
                    <img src='./uploads/{{this.image}}' style="width:285px;height: 200px;" />
                    <div class="card-body text-center">
                        <h5 class="card-title font-poppins">Images</h5>
                        <a href="#" class="btn btn-info font-size-09 text-light">Share Image</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>
{{!-- /display images --}}